<!DOCTYPE html>
<html lang="en" class="scroll-smooth">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link type="text/css " rel="stylesheet" href="../../../css/style.css">
    <link  type="text/css "rel="stylesheet" href="../../../css/layouts.css">
    <link rel="stylesheet" href="../../../css/swiper-bundle.min.css">
    <script defer src="../../../js/swiper-bundle.min.js"></script>
    <script defer src="../../../js/swiperInit.js"></script>
</head>

<body class="bg-primary-50 ">
   
    <!-- navigation bar -->
    <nav class="flex justify-around md:justify-between md:px-20 items-center  min-h-[10vh] bg-primary-50/70 pt-3 relative z-10 md:min-h-[15vh]">
        
        <!-- arcadia logo -->
        <div class="flex items-start justify-start  ">
            <a href="/accueil">
                <img src="../../../images/Arcadia-logo.png" alt="logo Arcadia" class="min-w-[76px] h-[70px] mr-10 md:w-[150px] md:h-[140px] inline">
            </a>
        </div>
        </div>

        <!-- nav menu -->
        <div class="md:flex hidden  items-center  space-x-10 justify-around mr-48">
           <a href="/accueil">
            <p class="text-black font-bold font-muli text-lg hover:text-icon duration-150 ease-out">
                Accueil
            </p>
           </a>
           <a href="/services">
            <p class="text-black font-bold font-muli text-lg hover:text-icon duration-150 ease-out">
                Services
            </p>
           </a>
           <a href="/habitats">
            <p class="text-black font-bold font-muli text-lg hover:text-icon duration-150 ease-out">
                Habitats
            </p>
           </a>
           <a href="/contact">
            <p class="text-black font-bold font-muli text-lg hover:text-icon duration-150 ease-out">
                Contact
            </p>
           </a>
        </div>

        <div class="relative">
            <!-- login user -->
            <div class="hidden md:block items-center justify-center hover:scale-95 duration-200 ease-in relative">
                <button class="drop-login">
                    <svg xmlns="http://www.w3.org/2000/svg" width="55" height="55" viewBox="0 0 256 256"><path fill="black" d="M230.93 220a8 8 0 0 1-6.93 4H32a8 8 0 0 1-6.92-12c15.23-26.33 38.7-45.21 66.09-54.16a72 72 0 1 1 73.66 0c27.39 8.95 50.86 27.83 66.09 54.16a8 8 0 0 1 .01 8"/></svg>
                </button>
            </div>

            
            
            <!-- dropdown menu -->
            
            <div class="absolute w-56 h-80 rounded-sm left-[-90px] bg-white z-40 py-4 hidden drop-login-menu">
                
            
                <form action="/api/login" method="post" class="p-4 space-y-4">
                    <% if (errorMessagesLogin && errorMessagesLogin.length > 0) { %>
                        <div class="error-messages flex flex-col items-center justify-center w-full h-fit">
                          <% errorMessagesLogin.forEach(function(error) { %>
                            <ul>
                              <li class="text-red-500 font-muli text-justify text-xs"><%= error %></li>
                            </ul>
                          <% }) %>
                        </div>
                      <% } %>
                      
                    <div class="space-y-2">
                        <label for="mail" class="font-muli font-semibold">Email</label>
                        <div class="border  h-8 flex items-center bg-white rounded-md px-2">
                            <input type="email" name="email" placeholder="MonMail@hotmail.com" class="outline-none">
                        </div>
                    </div>
                    <div class="space-y-2">
                        <label for="password" class="font-muli font-semibold">Mot de passe</label>
                        <div class="border  h-8 flex items-center bg-white rounded-md px-2">
                            <input type="password" name="password" placeholder="motdepasse" class="outline-none">
                        </div>
                    </div>
                    <div class="border w-fit  mx-auto  h-8 flex items-center bg-white rounded-md px-2">
                        <select name="userType" class="space-y-2 outline-none">
                            <option value="admin" class="font-muli outline-none">Administrateur</option>
                            <option value="veterinarian" class="font-muli outline-none">Vétérinaire</option>
                            <option value="employee" class="font-muli outline-none">Employé</option>
                        </select>
                    </div>

                    <div class="mx-auto w-fit">
                        <button type="submit" class="flex items-center justify-center space-x-1 bg-secondary-100 w-36 h-9 md:w-32 rounded-sm text-white hover:text-black hover:bg-secondary-50 hover:scale-95 duration-150 ease-in">
                            <p class="font-muli text-sm">Connexion</p>
                        </button>
                    </div>
                </form>
            </div>
        </div>
        


        <!-- mobile menu -->
        <div class="flex items-center justify-center gap-x-4 md:hidden">

            <div class="relative">
                <!-- hamburger menu -->
                <div>
                    <button class="open-hamburger">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 48 48"><g fill="none" stroke="#000" stroke-linecap="round" stroke-linejoin="round" stroke-width="4"><path d="M7.94971 11.9497H39.9497"/><path d="M7.94971 23.9497H39.9497"/><path d="M7.94971 35.9497H39.9497"/></g></svg>
                    </button>
                </div>
                <!-- close haburger menu -->
                <div class="hidden close-menu">
                    <button class="close-hamburger">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="black" d="M18.36 19.78L12 13.41l-6.36 6.37l-1.42-1.42L10.59 12L4.22 5.64l1.42-1.42L12 10.59l6.36-6.36l1.41 1.41L13.41 12l6.36 6.36z"/></svg>
                    </button>
                </div>

                <!-- navigation menu -->
                <div class=" absolute hidden bg-white w-56 h-72 -right-3 rounded-sm navigation-mobile-menu">

                    <div class="flex flex-col justify-center items-center h-full w-full  gap-y-6">
                        <div >
                            <a href="/accueil">
                                <p class="text-black font-bold font-muli text-lg hover:text-icon hover:border-b-2 hover:border-icon hover:scale-105 hover:-translate-y-2 duration-150 ease-out">
                                    Accueil
                                </p>
                            </a>
                        </div>
    
                        <div>
                            <a href="/services">
                                <p class="text-black font-bold font-muli text-lg hover:text-icon hover:border-b-2 hover:border-icon hover:scale-105 hover:-translate-y-2  duration-150 ease-out">
                                    Services
                                </p>
                            </a>
                            
                        </div>
    
                        <div>
                            <a href="/habitats">
                                <p class="text-black font-bold font-muli text-lg hover:text-icon hover:border-b-2 hover:border-icon hover:scale-105 hover:-translate-y-2  duration-150 ease-out">
                                    Habitats
                                </p>
                            </a>
                        </div>
                       
                        <div>
                            <a href="/contact">
                                <p class="text-black font-bold font-muli text-lg hover:text-icon hover:border-b-2 hover:border-icon hover:scale-105 hover:-translate-y-2  duration-150 ease-out">
                                    Contact
                                </p>
                            </a>
                        </div>
                
                    </div>
                   
                </div>
    
            </div>
            
          
            <!-- mobile login menu form -->
            <div class="relative">
                <!-- login menu -->
                <div class="pb-0.5 drop-mobile-login ">
                    <button>
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 256 256"><path fill="black" d="M230.93 220a8 8 0 0 1-6.93 4H32a8 8 0 0 1-6.92-12c15.23-26.33 38.7-45.21 66.09-54.16a72 72 0 1 1 73.66 0c27.39 8.95 50.86 27.83 66.09 54.16a8 8 0 0 1 .01 8"/></svg>
                    </button>
                </div>

                <!-- dropdown mobile menu -->
                <div class="absolute w-56 h-80 rounded-sm -right-4 bg-white z-40 py-4 hidden  mobile-login-menu">
                    <form action="/api/login" method="post" class="p-4 space-y-4">
                        <% if (errorMessagesLogin && errorMessagesLogin.length > 0) { %>
                            <div class="error-messages flex flex-col items-center justify-center w-full h-fit">
                              <% errorMessagesLogin.forEach(function(error) { %>
                                <ul>
                                  <li class="text-red-500 font-muli text-justify text-xs"><%= error %></li>
                                </ul>
                              <% }) %>
                            </div>
                          <% } %>
                          
                          <!-- Afficher les messages d'erreur -->
                        <div class="space-y-2">
                            <label for="mail" class="font-muli font-semibold">Email</label>
                            <div class="border  h-8 flex items-center bg-white rounded-md px-2">
                                <input type="email" name="email" placeholder="MonMail@hotmail.com" class="outline-none">
                            </div>
                        </div>
                        <div class="space-y-2">
                            <label for="password" class="font-muli font-semibold">Mot de passe</label>
                            <div class="border  h-8 flex items-center bg-white rounded-md px-2">
                                <input type="password" name="password" placeholder="motdepasse" class="outline-none">
                            </div>
                        </div>
                        <div class="border w-fit  mx-auto  h-8 flex items-center bg-white rounded-md px-2">
                            <select name="userType" class="space-y-2 outline-none">
                                <option value="admin" class="font-muli outline-none">Administrateur</option>
                                <option value="veterinarian" class="font-muli outline-none">Vétérinaire</option>
                                <option value="employee" class="font-muli outline-none">Employé</option>
                            </select>
                        </div>

                        <div class="mx-auto w-fit">
                            <button type="submit" class="flex items-center justify-center space-x-1 bg-secondary-100 w-36 h-9 md:w-32 rounded-sm text-white hover:text-black hover:bg-secondary-50 hover:scale-95 duration-150 ease-in">
                                <p class="font-muli text-sm">Connexion</p>
                            </button>
                        </div>
                    </form>
                </div>

            </div>
            
        </div>

    </nav>
    <!-- header CTA -->
    <header class="min-h-[50vh] relative">
        <!-- background video -->
        <div class="absolute top-0 left-0 w-full h-full overflow-hidden">
            <video src="../../../videos/video-accueil.mp4" autoplay muted playsinline loop class="w-full h-full object-cover"></video>
        </div>
    
        <!-- header cta -->
        <div class="flex items-center justify-center absolute top-64 left-0 right-0 z-0">
            <div class="flex flex-col md:flex-row md:space-x-7 items-center space-y-4 md:space-y-0 justify-around  p-4 rounded-md">
                <a href="/services" class="cta-button">
                    <button class="flex items-center justify-center space-x-1 bg-secondary-100 w-52 h-10 md:h-12 text-white hover:text-black hover:bg-secondary-50 hover:scale-95 duration-150 ease-in">
                        <div class="mb-1">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="#fffceb" d="M12 2C6.47 2 2 6.5 2 12a10 10 0 0 0 10 10a10 10 0 0 0 10-10A10 10 0 0 0 12 2m3.5 6A1.5 1.5 0 0 1 17 9.5a1.5 1.5 0 0 1-1.5 1.5A1.5 1.5 0 0 1 14 9.5A1.5 1.5 0 0 1 15.5 8m-7 0A1.5 1.5 0 0 1 10 9.5A1.5 1.5 0 0 1 8.5 11A1.5 1.5 0 0 1 7 9.5A1.5 1.5 0 0 1 8.5 8m3.5 9.5c-2.33 0-4.31-1.46-5.11-3.5h10.22c-.81 2.04-2.78 3.5-5.11 3.5"/></svg>
                        </div>
                        <p class="font-muli text-sm">Nos Activités</p>
                    </button>
                </a>
                <a href="#horaires">
                    <button class=" flex items-center justify-center space-x-1 bg-secondary-100 w-52 h-10 md:h-12  text-white hover:text-black hover:bg-secondary-50  hover:scale-95 duration-150 ease-in">
                        <div class="mb-1">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="#fffceb" d="M12 2A10 10 0 0 0 2 12a10 10 0 0 0 10 10a10 10 0 0 0 10-10A10 10 0 0 0 12 2m4.2 14.2L11 13V7h1.5v5.2l4.5 2.7z"/></svg>
                        </div>
                        <p class="font-muli text-sm "> Horaires du parc</p>
                    </button>
                </a>
            
                <a href="/habitats">
                    <button class=" flex items-center justify-center space-x-1.5 bg-secondary-100 w-52 h-10 md:h-12  text-white hover:text-black hover:bg-secondary-50  hover:scale-95 duration-150 ease-in">
                        <div class="mb-1">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 15 15"><path fill="#fffceb" d="M5 0a2 2 0 0 0-2 2v1a2 2 0 1 0 4 0V2a2 2 0 0 0-2-2m5 0a2 2 0 0 0-2 2v1a2 2 0 1 0 4 0V2a2 2 0 0 0-2-2M2 5a2 2 0 0 0-2 2v.5a2 2 0 1 0 4 0V7a2 2 0 0 0-2-2m11 0a2 2 0 0 0-2 2v.5a2 2 0 1 0 4 0V7a2 2 0 0 0-2-2M9.613 7.779a2.737 2.737 0 0 0-4.226 0L2.47 11.322C1.261 12.789 2.305 15 4.205 15c.272 0 .54-.063.782-.185l.36-.18a4.814 4.814 0 0 1 4.306 0l.36.18c.242.122.51.185.782.185c1.9 0 2.944-2.211 1.736-3.678z"/></svg>
                        </div>
                        <p class="font-muli text-sm "> Découvrez les animaux</p>
                    </button>
                </a>
            </div>
        </div>
    </header>
    
    
    <!-- parc presention -->
    <main>
        <!-- presentation section -->
        <section class="flex flex-col md:flex-row md:justify-around max-w-full h-screen mt-40 ">
            <!-- presentation image  -->
            <div class="md:flex flex-col">
                <div class="h-fit w-fit  mx-auto md:ml-10 md:mt-3  md:order-2" >
                    <img src="../../../images/hugo-herrera-5h1_OwBxLNI-unsplash.jpg" class="w-[90vw] md:w-[40vw]" alt="images présentation Arcadia" >
                </div>
                <div class="mt-3 w-[80vw] md:w-[40vw] md:mx-0 md:ml-10  space-y-3 mx-auto md:order-1">
                    <h1 class="font-neucha text-3xl text-center">
                        Le Zoo d’Arcadia, un lieu préservé pour s'émerveiller !
                    </h1>
                    <p class="font-muli text-center ">
                        Découvrez Arcadia, notre zoo enchanteur en Bretagne, niché près de la mystique forêt de Brocéliande depuis 1960. Venez voir nos animaux prospérer dans des habitats naturels variés, soignés quotidiennement par nos vétérinaires dévoués. Une visite chez nous, c'est un pas vers la nature et des rencontres uniques.
                    </p>
                </div>
            </div>

            <div class="space-y-4 md:order-3">
                <div class="flex flex-col items-center justify-center mt-3 w-[80vw] md:w-[10vw]  space-y-1 mx-auto">
                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 24 24"><path fill="#FFB534" d="M12 2A10 10 0 0 0 2 12a10 10 0 0 0 10 10a10 10 0 0 0 10-10A10 10 0 0 0 12 2m4.2 14.2L11 13V7h1.5v5.2l4.5 2.7z"/></svg>
                    <h1 class="font-muli text-lg text-center" id="horaires">
                        Horaires
                    </h1>
                    <p class="font-muli w-[60vw] md:w-[14vw] text-center">
                        Zoo ouvert toute l’année (jours fériés compris) de 9h à 19h du 1er avril au 30 septembre et de 9h à 18h le reste de l'année.Dernières entrées 2h avant la fermeture du parc 
                    </p>
                </div>

                <div class="flex flex-col items-center justify-center mt-3 w-[80vw] md:w-[10vw] space-y-1 mx-auto">
                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 24 24"><path fill="#FFB534" d="M15 18.5A6.48 6.48 0 0 1 9.24 15H15l1-2H8.58c-.05-.33-.08-.66-.08-1s.03-.67.08-1H15l1-2H9.24A6.491 6.491 0 0 1 15 5.5c1.61 0 3.09.59 4.23 1.57L21 5.3A8.955 8.955 0 0 0 15 3c-3.92 0-7.24 2.51-8.48 6H3l-1 2h4.06a8.262 8.262 0 0 0 0 2H3l-1 2h4.52c1.24 3.49 4.56 6 8.48 6c2.31 0 4.41-.87 6-2.3l-1.78-1.77c-1.13.98-2.6 1.57-4.22 1.57"/></svg>
                    <h1 class="font-muli text-lg text-center">
                        Tarifs
                    </h1>
                    <p class="font-muli w-[60vw] text-center">
                        Adulte : 22 €
                    </p>
                    <p class="font-muli w-[60vw] text-center">
                        Enfant (3 à 12 ans) : 17 €
                    </p>
                </div>
            </div>
            
            <div class="md:order-4">
                <div class="hidden md:block">
                    <img src="../../../images/singe-présentation-accueil.png" class="w-[220px] h-[320px]" alt="singe du zoo">
                </div>
                
                <div class="flex flex-col items-center justify-center mt-3 w-[80vw] md:w-[10vw] space-y-1 mx-auto">
                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 24 24"><path fill="#FFB534" d="M12 11.5A2.5 2.5 0 0 1 9.5 9A2.5 2.5 0 0 1 12 6.5A2.5 2.5 0 0 1 14.5 9a2.5 2.5 0 0 1-2.5 2.5M12 2a7 7 0 0 0-7 7c0 5.25 7 13 7 13s7-7.75 7-13a7 7 0 0 0-7-7"/></svg>
                    <h1 class="font-muli text-lg text-center">
                        Venir au zoo
                    </h1>
                    <p class="font-muli w-[60vw] md:w-[20vw] text-center">
                        Zoo Arcadia Proximité de la Forêt de Brocéliande <br> <span class="text-gray-500"> 56120 Josselin, Bretagne France</span>
                    </p>
                </div>
            </div>   
        </section>

        <!-- services section -->
        <section class="h-screen mt-[575px] md:mt-14">

            <div class="flex items-center justify-center flex-col space-y-2">
                <h1 class="font-neucha text-3xl text-center">A ne pas louper !</h1>
                <p class="font-muli  text-center">
                    Ne ratez pas nos dernières nouveautés et nos Activités incontournables.
                </p>
            </div>

            <!-- services card  -->
            <div class="container flex flex-col justify-center  h-full mx-auto pt-5">
                <!-- cards -->
                <div class="h-full w-full space-y-8 md:space-y-0  md:pt-2 md:px-14 md:flex md:flex-row">

                    <% if (services !== 0) { %>
                        <% services.forEach(service => { %>
                            <div class="flex flex-col items-center border rounded-md shadow-md w-[50vw] h-[50vh] md:w-[18vw] mx-auto gap-y-5 pb-4">
                                <div class="w-full h-3/5">
                                    <img src="<%= service.images %>" alt="Photo du service de <%= service.name %>" class="rounded-t-md w-full h-full object-cover">
                                </div>
                                <div>
                                    <h1 class="font-muli text-xl text-center"><%= service.name %></h1>
                                </div>
                                <div class="flex items-center justify-center w-full h-1/5"> 
                                    <a href="/services">
                                        <button class="flex items-center justify-center space-x-1 bg-secondary-100 w-36 h-9 md:w-32 rounded-sm text-white hover:text-black hover:bg-secondary-50 hover:scale-95 duration-150 ease-in">
                                            <p class="font-muli text-sm">En savoir +</p>
                                        </button>
                                    </a>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>

                </div>
            </div>
        </section>

      
           <!-- Habitat section -->
            <section class="h-fit mt-[545px] md:mt-[-55px]">
                <div class="flex items-center justify-center flex-col space-y-2">
                    <h1 class="font-neucha text-3xl text-center">Visiter autrement</h1>
                    <p class="font-muli text-center">Vous rêvez d’en apprendre plus sur les animaux et de découvrir les Habitats du Zoo ?</p>
                </div>
                <div class="container relative mx-auto md:mt-10">
                    <div class="swiper-container-habitats"> 
                        <div class="swiper-wrapper">
                            <% if (habitats) { %>
                                <% habitats.forEach(habitat => { %>
                                    <div class="swiper-slide">
                                        <div class="flex flex-col items-center border rounded-md shadow-md w-[50vw] h-[50vh] md:w-[18vw] mx-auto gap-y-5 pb-3">
                                            <div class="w-full h-3/5">
                                                <img src="<%= habitat.images %>" alt="Photo habitat" class="rounded-t-md w-full h-full object-cover">
                                            </div>
                                            <div class="flex flex-col items-center justify-center w-full h-1/5 space-y-2">
                                                <h1 class="font-muli text-center"><%= habitat.name %></h1>
                                                <a href="/habitats/<%= habitat.habitat_id %>">
                                                    <button class="flex items-center justify-center space-x-3 bg-secondary-100 w-36 h-9 md:w-32 rounded-sm text-white hover:text-black hover:bg-secondary-50 hover:scale-95 duration-150 ease-in">
                                                        <p class="font-muli text-sm">Découvrir</p>
                                                    </button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } %>
                        </div>
                        <!-- Add Pagination -->
                        <div class="swiper-pagination"></div>
                        <!-- Add Navigation -->
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                    </div>
                </div>
            </section>

        <!-- animaux section -->
        <section class="h-fit mt-10 md:mt-14">

            <div class="flex items-center justify-center flex-col space-y-2">
                <h1 class="font-neucha text-3xl text-center">Découvrez nos animaux</h1>
            </div>

            <!-- animaux card -->
            <div class="container flex flex-col justify-center h-full mx-auto pt-5">
                <div class="h-full w-full space-y-8 md:space-y-0 md:pt-2 md:px-14 md:flex md:flex-row">
                    <div class="container mx-auto">
                        <div class="flex flex-wrap justify-center gap-5">
                            <% if (animals.length > 0) { %>
                                <% for (let i = 0; i < 3 && i < animals.length; i++) { %>
                                    <div class="flex flex-col items-center border rounded-md shadow-md w-[50vw] h-[50vh] md:w-[18vw] mx-auto gap-y-5 pb-3">
                                        <div class="w-full h-3/5">
                                            <img src="<%= animals[i].images %>" alt="Photo de <%= animals[i].name %>" class="rounded-t-md w-full h-full object-cover">
                                        </div>
                                        <div>
                                            <h1 class="font-muli text-xl text-center"><%= animals[i].name %></h1>
                                        </div>
                                        <div class="flex items-center justify-center w-full h-1/5">
                                            <a href="/habitats">
                                                <button class="flex items-center justify-center space-x-3 bg-secondary-100 w-36 h-9 md:w-32 rounded-sm text-white hover:text-black hover:bg-secondary-50 hover:scale-95 duration-150 ease-in">
                                                    <p class="font-muli text-sm">Découvrir</p>
                                                </button>
                                            </a>
                                        </div>
                                    </div>
                                <% } %>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </section>

        <!-- review section -->
        <section class="h-fit mt-14 w-full px-0">
            <div>
                <div class="flex items-center justify-center flex-col space-y-2">
                    <h1 class="font-muli text-icon font-bold text-4xl text-center">Arcadia</h1>
                    <p class="font-muli text-xl  text-center">Notre organisation dédiée à la préservation des espèces menacées.</p>
                    <h1 class="font-muli text-lg">il nous ont laissez un avis :</h1>
                </div>

                <!-- Swiper -->
                <div class="swiper-container swiper-container-avis bg-white shadow-md rounded-lg py-4 mx-auto  mt-3 max-w-full">
                    <div class="swiper-wrapper">
                        <% reviews.forEach(review => { %>
                            <div class="swiper-slide">
                                <div class="text-center p-4 space-y-3">
                                    <p class="font-muli">"<%= review.description %>"</p>
                                    <p class="font-muli text-icon">- <%= review.pseudo %></p>
                                </div>
                            </div>
                        <% }); %>
                    </div>

                    <div class="flex space-x-4 justify-center mt-5">
                        <a href="#review-form">
                            <button class="bg-icon w-32 h-9 rounded-sm text-white hover:bg-orange-300">Laisser un avis</button>
                        </a>
                        <a href="/contact">
                            <button class="bg-icon w-32 h-9 rounded-sm text-white hover:bg-orange-300">Contactez nous</button>
                        </a>
                    </div>
            </div>
        </section>

       <!-- Review Form section -->
        <section class="h-fit mt-14 w-full px-0 pb-4">
            <div id="review-form">
                <div class="container flex flex-col items-center gap-y-4 mx-auto w-full h-[95vh] bg-primary-100 mt-10">

                
                    <form action="/api/v1/visitorReview" method="post" class="mt-7 space-y-4">

                        <div class="flex items-center justify-center w-full">
                            <h1 class=" text-black font-neucha text-3xl text-center w-[70vw]">Votre avis est important pour nous !</h1>
                        </div>

                        <!-- Afficher les messages d'erreur -->
                        <% if (errorMessagesReview && errorMessagesReview.length > 0) { %>
                            <div class="error-messages flex flex-col items-center justify-center w-full h-fit">
                              <% errorMessagesReview.forEach(function(error) { %>
                                <ul>
                                  <li class="text-red-500 font-muli text-justify text-sm"><%= error %></li>
                                </ul>
                              <% }) %>
                            </div>
                          <% } %>
                        
                        
                        <div class="flex flex-col space-y-2">
                            <label for="pseudo" class="font-neucha">Pseudo</label>
                            <div class="border w-[80vw] h-8 flex items-center bg-white rounded-md px-2">
                                <input type="text" name="pseudo" placeholder="Mon pseudo" class="outline-none flex-1 font-muli bg-transparent">
                            </div>
                        </div>
                        
                        <div class="flex flex-col space-y-2">
                            <label for="email" class="font-neucha">Email</label>
                            <div class="border w-[80vw] h-8 flex items-center bg-white rounded-md px-2">
                                <input type="text" name="email" placeholder="Monemail@hotmail.com" class="outline-none flex-1 font-muli bg-transparent">
                            </div>
                        </div>
                        
                        <div class="flex flex-col space-y-2">
                            <label for="description" class="font-neucha">Avis</label>
                            <textarea id="description" name="description" rows="4" class="border w-full max-w-[80vw] h-auto min-h-[100px] outline-none bg-white rounded-md p-2" placeholder="Écrivez votre avis ici..."></textarea>
                        </div>

                        <div class="mx-auto w-fit mt-4 md:mt-10 md:pt-10">
                            <button type="submit" class="flex items-center justify-center space-x-1 bg-secondary-100 w-32 h-9 md:w-32 rounded-md text-white hover:text-black hover:bg-secondary-50 hover:scale-95 duration-150 ease-in">
                                <p class="font-muli text-sm">Poster avis</p>
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </section>

    </main>

    <footer>
        <%- include('../components/footer') %>
    </footer>

    <script src="../../../js/layouts.js"></script>
</body>
</html>