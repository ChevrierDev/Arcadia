<!DOCTYPE html>
<html lang="fr" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link type="text/css" rel="stylesheet" href="../../../css/style.css">
    <script defer   src="../../../js/admin.js"></script>
</head>
<body class="min-h-screen bg-primary-100 overflow-x-hidden overflow-y-auto">

    <!-- hero offers content section -->
    <main class="min-h-full ">
        <div class="flex h-full p-4">

            <!-- sidebar -->
            <div class="hidden md:flex flex-col h-fit w-64 bg-icon  rounded-2xl shadow-lg">
                <div class="flex items-center justify-center h-20 bg-icon  rounded-2xl ">
                    <a href="/accueil">
                        <img src="../../../images/Arcadia-logo.png" width="60" height="75" alt="logo-Arcadia" class="h-11">
                        <p class="text-[0.6em] font-light font-muli text-white ml-4">Arcadia for <%= user.role %></p>
                    </a>
                </div>
                
                <div class="flex flex-col overflow-y-auto rounded-b-2xl shadow-lg ">
                    <!-- side bar navigation -->
                    <%- include('./components/vetSidebar') %>
                </div>
            </div>
        
            <!-- Main content -->
            <div class="flex flex-col flex-1  pb-10 ">
                <div class="flex items-center justify-between h-24  bg-transparent">
                    <div class=" px-4 hidden md:block">
                        <div class="px-4 flex items-center">
                            <h1 class="text-2xl font-muli font-bold"> <span class="font-muli text-gray-700 text-[1.05rem] tracking-wide">Bienvenue, <%= user.first_name %> <%= user.last_name %></span> <br> <span class="font-bold font-muli text-4xl tracking-wide "></span> </h1>
                        </div>
                    </div>

                    <!-- create animal and deconnection desktop button -->
                    <div class=" md:flex">

                        <div class="flex items-center pr-4 ">
                            <!-- logout button -->
                            <form action="/api/logout" method="post">
                                <a href="" class="font-muli text-sm text-white mr-5">
                                    <button type="submit" class="border-2 shadow-sm border-icon text-black  font-semibold font-muli w-32 h-10 rounded-lg hover:scale-105 duration-300 ease-in-out">
                                    d√©connexion
                                    </button>
                                </a>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="">
                <!-- see animal section -->
                <section class=" w-[80%] h-screen mx-auto pt-2 space-y-10">
                 
                    <div class="container bg-primary-50 border rounded-md shadow-lg border-black w-full h-[50%] md:min-h-[80%] overflow-y-auto ">

                        <div class="container flex flex-col items-center justify-center space-y-5 py-2 h-full">
                            <div class="h1 font-muli font-semibold text-lg">Faire votre commentaire</div>
                            <form  method="post"  action="/veterinarian//commentaire/<%= habitats.habitat_id %>?_method=PUT" class="flex flex-col space-y-5 mt-2">


                                <div class="flex flex-col"> 
                                    <label for="detail_etat" class="font-muli text-sm">Commentaire : </label>
                                  <textarea name="veterinarian_comment" id="" class="h-20 "></textarea>
                                </div>

                                <input type="text" name="name" class="hidden" value="<%= habitats.name %>">
                                <input type="text" name="description" class="hidden" value="<%= habitats.description %>">
                                <input type="text" name="images" class="hidden" value="<%= habitats.images %>">
                                
                            
                                <div class="flex flex-col md:flex-row space-y-3 md:space-y-0 md:space-x-4">
                                    <button type="submit" class="h-10 w-52 font-muli font-semibold rounded-sm bg-icon text-white mx-auto hover:scale-95 duration-150 ease-in">Envoyer rapport</button>
                                </div>
                            </form>
                            
                        </div>
                        
                    </div>
                    
                </section>
             
            </div>
      
        </div>

    </main>        
</body>
</html>